<%- include ("partials/header.ejs"); %>
    <%- include ("partials/navbar.ejs"); %>

        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h1>
                        <%= question.title %>
                    </h1>
                    <h4 class="text-secondary">
                        <%= question.description %>
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/answer">
                        <textarea class="form-control mb-3" style="min-height: 100px;" placeholder="Type an answer..." name="body"></textarea>
                        <input type="text" class="d-none" name="repliedTo" value="<%= question.id %>">
                        <button class="btn btn-success btn-block">Send Answer</button>
                    </form>
                </div>
            </div>
            <div class="card mt-4 mb-5">
                <div class="card-header">
                    <h3>Recent replies</h3>
                </div>
                <div class="card-body">
                <% if(replies.length > 0) { %>
                    <% replies.forEach((reply) => { %>
                        <p><%= reply.body %></p>
                        <hr>
                    <% }); %>
                <% } else { %>
                    <h5>No replies yet.</h5>
                    <hr>
                <% } %>
                </div>
            </div>
        </div>

        <%- include ("partials/footer.ejs"); %>